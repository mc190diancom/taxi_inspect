<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="PxUsage">
    <!-- Base application theme. -->

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:textColor">#FFFEFE</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/bg_common_button_shape</item>
    </style>

    <style name="CommonCheckBoxStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/checkbox_selector</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="CommonTitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">#F4F4F4</item>
    </style>

    <style name="CommonDesTextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="CommonContentEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColorHint">#CBCBCB</item>
        <item name="android:textColor">#333333</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CommonContentTextViewWithDropDownStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColorHint">#CBCBCB</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_down</item>
    </style>

    <style name="CommonContentTextViewWithRightStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColorHint">#CBCBCB</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_right</item>
    </style>

    <style name="CommonHorizontalLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FullCommonLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divide_color</item>
    </style>

    <style name="CommonLineStyle" parent="FullCommonLineStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>


    <!--============================  以下为文书的样式  ============================-->

    <!--页面风格-->
    <style name="A4Style">
        <item name="android:layout_width">1080px</item>
        <item name="android:layout_height">1528px</item>
        <item name="android:paddingTop">86px</item>
        <item name="android:paddingBottom">135px</item>
        <item name="android:paddingStart">143px</item>
        <item name="android:paddingEnd">84px</item>
    </style>

    <!--主标题-->
    <style name="InstrumentTitleStyle">
        <item name="android:textSize">29px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--副标题-->
    <style name="InstrumentSubTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">154px</item>
        <item name="android:textSize">22px</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">27px</item>
    </style>

    <!--粗线-->
    <style name="InstrumentBoldLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">8px</item>
    </style>

    <!--内容加粗样式-->
    <style name="InstrumentBoldContentStyle">
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--内容样式-->
    <style name="InstrumentContentStyle">
        <item name="android:textSize">22px</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--印章-->
    <style name="InstrumentSealStyle">
        <item name="android:textSize">25px</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--签字-->
    <style name="InstrumentSignStyle">
        <item name="android:textSize">27px</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--备注-->
    <style name="InstrumentRemarksStyle">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">17px</item>
    </style>

    <!--=========================================================================-->

    <style name="CommonContentTextViewWithButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/bg_common_right_button_shape</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <!--时间控件相关-->
    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="picker_view_scale_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>

    <!--=======================list的itme样式===============================-->
    <style name="ListCaseItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color333</item>
    </style>

    <style name="ListCaseItemTextViewStyle" parent="ListCaseItemStyle">
        <item name="android:layout_marginBottom">13dp</item>
    </style>

    <!--每个提交按钮的公共样式-->
    <style name="SureButtonStyle" parent="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">23dp</item>
    </style>

    <!--单选框的公共样式-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/color333</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/checkbox_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginStart">17dp</item>
    </style>
    <!--公共dialog样式-->
    <style name="clean_dialog" parent="@style/AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="sheet_dialog" parent="@style/clean_dialog">
        <item name="android:windowAnimationStyle">@style/sheet_anim</item>
    </style>

    <style name="sheet_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="dialog_btn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="dialog_sheet_btn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TimeLineDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="UploadDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <!--*****************************************-->
</resources>
