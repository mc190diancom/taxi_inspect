<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/legwork_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_upload_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_add_84"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="17dp"
            android:text="添加询问笔录"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_button_container"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_create_case"
            style="@style/CommonButtonStyle"
            android:layout_width="0dp"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:text="@string/create_case" />

        <Button
            android:id="@+id/btn_save_to_exist"
            style="@style/CommonButtonStyle"
            android:layout_width="0dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:text="@string/save_to_exist" />

    </LinearLayout>

</LinearLayout>