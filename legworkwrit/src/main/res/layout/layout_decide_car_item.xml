<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_decide_car_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout style="@style/CommonHorizontalLinearLayoutStyle">

        <TextView
            style="@style/CommonDesTextViewStyle"
            android:text="车&#160;&#160;牌&#160;&#160;号&#8195;" />

        <com.miu30.common.util.ClearEditText
            android:id="@+id/et_car_license2"
            style="@style/CommonContentEditTextStyle"
            android:hint="@string/car_license_hint"
            android:inputType="text" />

    </LinearLayout>

    <com.miu30.common.util.FullListView
        android:id="@+id/list_show_car_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:visibility="gone" >
    </com.miu30.common.util.FullListView>

    <View style="@style/CommonLineStyle" />

    <LinearLayout style="@style/CommonHorizontalLinearLayoutStyle">

        <TextView
            style="@style/CommonDesTextViewStyle"
            android:text="车辆品牌&#8195;" />

        <com.miu30.common.util.ClearEditText
            android:id="@+id/et_car_brand2"
            style="@style/CommonContentEditTextStyle"
            android:ellipsize="end"
            android:hint="@string/car_brand_hint"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1" />

    </LinearLayout>

    <View style="@style/CommonLineStyle" />

    <LinearLayout style="@style/CommonHorizontalLinearLayoutStyle">

        <TextView
            style="@style/CommonDesTextViewStyle"
            android:text="车身颜色&#8195;" />

        <com.miu30.common.util.ClearEditText
            android:id="@+id/et_car_color2"
            style="@style/CommonContentEditTextStyle"
            android:hint="@string/car_color_hint"
            android:inputType="text" />

    </LinearLayout>

    <View style="@style/CommonLineStyle" />

    <LinearLayout style="@style/CommonHorizontalLinearLayoutStyle">

        <TextView
            style="@style/CommonDesTextViewStyle"
            android:text="车辆类型&#8195;" />

        <com.miu30.common.util.ClearEditText
            android:id="@+id/et_car_model2"
            style="@style/CommonContentEditTextStyle"
            android:ellipsize="end"
            android:hint="@string/car_type_hint"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1" />

    </LinearLayout>

    <View style="@style/CommonLineStyle" />

    <LinearLayout style="@style/CommonHorizontalLinearLayoutStyle">

        <TextView
            style="@style/CommonDesTextViewStyle"
            android:text="车&#160;&#160;架&#160;&#160;号&#8195;" />

        <com.miu30.common.util.ClearEditText
            android:id="@+id/et_car_frame2"
            style="@style/CommonContentEditTextStyle"
            android:ellipsize="end"
            android:hint="@string/car_frame_number_hint"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1" />

    </LinearLayout>

    <View style="@style/CommonLineStyle" />
</LinearLayout>