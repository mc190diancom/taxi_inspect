<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/duibie"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#e7fff7"
                android:gravity="center"
                android:lines="2"           
                android:ellipsize="end"
                android:text=""
                android:textColor="#333333"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />

             <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_biaoyan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />
            
             <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_pijiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_jinggao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_chufa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/dadui_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e7fff7"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333" />
    </LinearLayout>
