<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="#fff"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:text="1"
        android:textColor="@color/result_info_text_color"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号:"
                    android:visibility="gone"
                    android:textColor="@color/result_info_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/number_car_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京B2569"
                    android:textColor="@color/result_info_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当事人:"
                    android:visibility="gone"
                    android:textColor="@color/result_info_text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/usre_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李春瑶"
                    android:textColor="@color/result_info_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/jiean_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="46px"
                android:text="结案"
                android:textColor="@color/jiean_btn_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查时间:"
                android:visibility="gone"
                android:textColor="@color/result_info_text_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/check_time_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016-03-17 12:32"
                android:textColor="@color/result_info_text_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/type_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="46px"
                android:text="巡游车"
                android:textColor="@color/result_info_text_color"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>