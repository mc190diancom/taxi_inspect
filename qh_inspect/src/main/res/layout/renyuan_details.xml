<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/img_zfry"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/zhifarenyuan"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
	        android:layout_height="26dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
            <TextView 
            android:id="@+id/tv_renyuan_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="张三丰"
            android:gravity="center_vertical"/>
            <TextView 
            android:id="@+id/tv_renyuan_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2012-01-01 00:00:00"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_renyuan_dd"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="第七大队"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center_vertical"/>
        <TextView 
            android:id="@+id/tv_renyuan_address"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="北京市"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
       android:id="@+id/tv_renyuan_details"
       android:layout_width="70dp"
       android:layout_height="match_parent"
       android:gravity="center_vertical"
       android:layout_marginRight="10dp"
       android:layout_marginLeft="5dp"
       android:drawablePadding="5dp"
       android:drawableRight="@drawable/weizhang_next"
       android:text="查看详情"
       android:textColor="#666666"
       android:textSize="13sp" />
</LinearLayout>
