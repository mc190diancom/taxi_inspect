<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/header" />
  <HorizontalScrollView
      android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:scrollbars="none">
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="巡游"
	            android:textColor="@color/hangye_basic_textcolor"
	            android:textSize="14sp" />
	        <TextView
                android:id="@+id/separation_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_short"
                 />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid1"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="旅游"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
	        <TextView
	                android:id="@+id/separation_two"
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:background="@drawable/separation_line_basic"
	                 />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid2"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="省际"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
	        <TextView
                android:id="@+id/separation_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>

        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid3"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="货运"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
        	<TextView
                android:id="@+id/separation_four"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
            <TextView
	            android:id="@+id/tv_guid4"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="化危"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
            <TextView
                android:id="@+id/separation_five"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid5"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="租赁"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
           <TextView
                android:id="@+id/separation_six"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>

        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid6"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="维修"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp" />
              <TextView
                android:id="@+id/separation_seven"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_guid7"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:gravity="center"
	            android:text="水运"
	            android:textColor="@color/hangye_help_textcolor"
	            android:textSize="14sp"/>
             <TextView
                android:id="@+id/separation_eight"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separation_line_basic"/>
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>