<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="司机信息"
        android:textColor="@color/jiean_btn_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/separation_line_short" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/mybackground_three" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:text="照        片"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="准驾证号"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/number_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7845656223"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="司机姓名"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/name_driver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="张某某"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="所属单位"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/company_driver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="一二三四"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="身份证号"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/ID_card_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="412653198812228742"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="联系电话"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15859626531"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="家庭住址"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="北京朝阳区四季家园小区"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="初次上岗"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/first_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2015-01-01"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="本次上岗"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_two" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2016-03-08"
                    android:textColor="@color/basic_car_info_color"
                    android:textSize="16sp" />

                <include layout="@layout/mybackground_four" />
            </LinearLayout>

            <include layout="@layout/mybackground_one" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/footer" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

</LinearLayout>