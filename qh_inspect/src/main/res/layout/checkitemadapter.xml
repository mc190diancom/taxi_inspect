<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/jiancha_leibie"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="仪容仪表"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/jiancha_daima"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="YCZ0113"
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="gone" />

   
        <TextView
            android:id="@+id/jiancha_neirong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="外省市危险货物外省市危险货物省市危险货物"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <RadioGroup
            android:id="@+id/jiancha_rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/jiancha_zhengchang"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/radiobuttonchecked"
                android:paddingTop="10dp"
                android:textSize="14sp" />

            <View
                android:id="@+id/leibie3"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="#dddddd" />

            <RadioButton
                android:id="@+id/jiancha_weifa"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/checkitemweifachecked"
                android:paddingTop="10dp"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="#dddddd" />
        </RadioGroup>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#dddddd" />

</LinearLayout>