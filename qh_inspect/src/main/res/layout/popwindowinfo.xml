<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="执法人员1"
            android:textColor="#303030"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/renyuan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weizhang_long"
            android:gravity="center"
            android:hint="请输入执法人员"
            android:textColor="#303030"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/renyuan_btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/zhifarenyuan_inspect" 
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="执法人员2"
            android:textColor="#303030"
            android:drawableRight="@drawable/label"
            android:paddingRight="5dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/renyuan2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weizhang_long"
            android:gravity="center"
            android:hint="请输入执法人员"
            android:textColor="#303030"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/renyuan_btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/zhifarenyuan_inspect" />
    </LinearLayout>

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="执法地点"
            android:drawableRight="@drawable/label"
            android:paddingRight="10dp"
            android:textColor="#303030"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weizhang_long"
            android:gravity="center"
            android:hint="请输入执法地点"
            android:textColor="#303030"
            android:textSize="14sp" />
        
        <ImageButton
                android:id="@+id/pop_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/dingwei_hangye" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="执法时间"
            android:textColor="#303030"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zhifa_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weizhang_long"
            android:gravity="center"
            android:hint="请输入执法时间"
            android:textColor="#303030"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/pop_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="保存"
            android:background="@drawable/weizhang_long"
            android:textColor="#303030"
            android:textSize="15sp" />
    </LinearLayout>
    
</LinearLayout>