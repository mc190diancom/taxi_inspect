<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/jiancha_leibie"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="检查类别"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/jiancha_daima"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="YCZ0113"
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/jiancha_neirong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="违法行为"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />

        <LinearLayout
            android:id="@+id/jiancha_rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jiancha_zhengchang"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                 android:gravity="center"
                android:text="否"
                android:textSize="14sp" />

            <View
                android:id="@+id/leibie3"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/jiancha_weifa"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                 android:gravity="center"
                android:text="是"
                android:paddingTop="10dp"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="#dddddd" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="#dddddd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#dddddd" />

    <include layout="@layout/common_list" />

</LinearLayout>